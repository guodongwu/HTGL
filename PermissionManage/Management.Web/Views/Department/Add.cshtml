<body style="padding: 10px">
    <form name="form1">
        <table cellpadding="0" cellspacing="0" class="l-table-edit">
            <tr>
                <td align="right" class="l-table-edit-td">部门名称:</td>
                <td align="left" class="l-table-edit-td">
                    <input name="DeptName" field="DeptName" type="text" id="DeptName" ltype="text" validate="{required:true,notnull:true}" nulltext="不能为空!" />
                    <input name="DID" field="DID" id="DID" type="hidden" />
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">部门描述:</td>
                <td align="left" class="l-table-edit-td">
                    <textarea cols="100" rows="4" class="l-textarea" style="width: 400px" id="DeptDescription" name="DeptDescription" field="DeptDescription"></textarea>
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">上级部门:</td>
                <td align="left" class="l-table-edit-td">
                    <input name="ParentName" type="text" id="ParentName" ltype="text" />
                    <input name="ParentID" id="ParentID" field="ParentID" type="hidden" />
                </td>
            </tr>
        </table>
        <br />
    </form>
</body>
<script type="text/javascript">
    $(function () {
        $("#form1").ligerForm();
    });
</script>
